<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pagin.PaginationFragment">

    <ImageView
        android:id="@+id/paginator_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:src="@drawable/divider_dark"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button_prev"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/paginator_divider"
        android:layout_toEndOf="@+id/text_count"
        android:layout_toRightOf="@+id/text_count"
        android:height="36dp"
        android:minWidth="88dp"
        android:layout_margin="@dimen/padding_8dp"
        android:text="@string/button_previous" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_prev"
        android:layout_below="@+id/paginator_divider"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_8dp" />

    <Button
        android:id="@+id/button_next"
        style="@style/MyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/paginator_divider"
        android:layout_toLeftOf="@+id/text_count"
        android:layout_toStartOf="@+id/text_count"
        android:height="36dp"
        android:minWidth="88dp"
        android:layout_margin="@dimen/padding_8dp"
        android:text="@string/button_next" />
</RelativeLayout>