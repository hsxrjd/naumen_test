<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_main_scroll_view"
    tools:context="com.wagon.hsxrjd.computerdatabase.fragment.CardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />


        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:lines="1"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/company_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:layout_below="@+id/company_name"
            android:text="Company"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/company_text"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:layout_below="@id/description"
            android:text="Description"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/computer_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:layout_below="@+id/description_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:contentDescription="Computer Image"
            android:maxHeight="256dp"
            android:maxWidth="256dp"
            android:minHeight="256dp"
            android:minWidth="256dp"
            android:visibility="visible" />


        <TextView
            android:id="@+id/similar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:layout_below="@id/computer_image"
            android:layout_marginTop="8dp"
            android:text="You might be looking for:"
            android:textAlignment="center" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/similar"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="wrap_content"
            android:layout_below="@id/similar_text"
            android:isScrollContainer="false"
            android:scrollbars="none" />
    </RelativeLayout>
</ScrollView>