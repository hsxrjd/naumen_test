<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.wagon.hsxrjd.computerdatabase.fragment.CardFragment"
    android:padding="16dp"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progress_bar_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/company_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:lines="1"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/company_name"
        android:id="@+id/company_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Company"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="wrap_content" />






    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/description"
        android:layout_below="@id/company_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:maxLines="2"
        android:textSize="16sp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/description"
        android:textSize="14sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Description"
        android:id="@+id/description_text"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_text"
        android:layout_marginTop="16dp"
        android:maxWidth="256dp"
        android:maxHeight="256dp"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:id="@+id/computer_image"
        android:contentDescription="Computer Image" />


    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:id="@+id/similarities_text"
        android:textAlignment="center"
        android:visibility="gone"
        android:text="You might be looking for:"
        android:layout_below="@id/description_text"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/similarities"
        android:visibility="gone"
        android:layout_below="@id/similarities_text"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content" />
</RelativeLayout>