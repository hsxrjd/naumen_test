<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_item_padding_bottom"
    android:paddingEnd="@dimen/list_item_padding_end_right"
    android:paddingLeft="@dimen/list_item_padding_start_left"
    android:paddingRight="@dimen/list_item_padding_end_right"
    android:paddingStart="@dimen/list_item_padding_start_left"
    android:paddingTop="@dimen/padding_8dp">

    <TextView
        android:id="@+id/list_item_textview_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/list_item_title"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:fontFamily="@string/roboto_regular"
        android:textSize="@dimen/text_size_list_item_primary" />

    <TextView
        android:id="@+id/list_item_textview_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_textview_main"
        android:fontFamily="@string/roboto_regular"
        android:textSize="@dimen/text_size_list_item_secondary" />

</RelativeLayout>