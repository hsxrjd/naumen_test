<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:maxHeight="@dimen/list_item_height"
    android:minHeight="@dimen/list_item_height"
    android:paddingBottom="@dimen/list_item_padding_bottom"
    android:paddingEnd="@dimen/list_item_padding_end_right"
    android:paddingLeft="@dimen/list_item_padding_start_left"
    android:paddingRight="@dimen/list_item_padding_end_right"
    android:paddingStart="@dimen/list_item_padding_start_left">

    <ProgressBar
        android:id="@+id/progress_bar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>